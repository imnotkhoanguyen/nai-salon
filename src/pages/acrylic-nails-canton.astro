---
import Layout from '../layouts/Layout.astro';

const title = "Acrylic Nails in Canton, Ohio | Full Sets from $65 | Nail 90 Spa";
const description = "Professional acrylic nails in Canton, Ohio. Full sets from $65, fills from $40, repairs from $15. Located near Canton with premium acrylic services.";
---

<Layout title={title} description={description}>
	<h1>Acrylic Nails in Canton, Ohio</h1>
	<p>Professional acrylic nail services in Canton. Full sets, fills, and repairs at Nail 90 Spa.</p>

	<section class="services">
		<div class="card">
			<h2>Acrylic Full Set</h2>
			<p><strong>From $65</strong> • 90 minutes</p>
			<ul>
				<li>Custom length and shape</li>
				<li>Premium acrylic application</li>
				<li>Gel polish finish</li>
				<li>Cuticle care included</li>
			</ul>
		</div>
		<div class="card">
			<h2>Acrylic Fill</h2>
			<p><strong>From $40</strong> • 60 minutes</p>
			<ul>
				<li>Grow-out maintenance</li>
				<li>Shape refinement</li>
				<li>Color refresh</li>
				<li>Cuticle cleanup</li>
			</ul>
		</div>
		<div class="card">
			<h2>Acrylic Repair</h2>
			<p><strong>From $15</strong> • 30 minutes</p>
		</div>
	</section>

	<section class="location-info">
		<h2>Nail 90 Spa Canton Location</h2>
		<p><strong>Address:</strong> 1234 Massillon Rd, Green, OH 44685</p>
		<p><strong>Phone:</strong> (330) 555-0199</p>
		<p><strong>Hours:</strong> Tue–Sat 9am–6pm</p>
	</section>

	<section class="nearby">
		<h2>Acrylic Nails Near Canton</h2>
		<ul>
			<li><a href="/acrylic-nails-north-canton">Acrylic Nails North Canton</a></li>
			<li><a href="/acrylic-nails-green">Acrylic Nails Green OH</a></li>
			<li><a href="/nail-salon-canton">Nail Salon Canton OH</a></li>
		</ul>
	</section>

	<p><a class="btn" href="/book">Book Acrylic Appointment</a></p>
</Layout>

<style>
	.services { display: grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 1rem; margin: 2rem 0; }
	.card { border: 1px solid var(--border); border-radius: 0.5rem; padding: 1rem; }
	.location-info { margin: 2rem 0; padding: 1rem; background: var(--muted); border-radius: 0.5rem; }
	.nearby { margin: 2rem 0; }
	.nearby ul { list-style: none; padding: 0; display: grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 0.5rem; }
	@media (max-width: 780px) { .services, .nearby ul { grid-template-columns: 1fr; } }
</style>
