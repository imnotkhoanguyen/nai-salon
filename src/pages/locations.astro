---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<h1>Locations</h1>
	<p>We are proud to serve Green, Ohio.</p>

	<section class="card">
		<h3>Nai Salon — Green</h3>
		<p>1234 Massillon Rd, Green, OH 44685</p>
		<p><strong>Hours:</strong> Tue–Sat 9am–6pm</p>
		<p><strong>Phone:</strong> (330) 555-0199</p>
		<div class="map-wrap">
			<iframe
				title="Map of Nai Salon in Green, Ohio"
				width="100%"
				height="320"
				style="border:0;border-radius:8px;"
				loading="lazy"
				allowfullscreen
				referrerpolicy="no-referrer-when-downgrade"
				src="https://www.google.com/maps?q=Green%2C%20Ohio&output=embed">
			</iframe>
		</div>
	</section>

	<p>
		<a class="btn" href="/contact">Contact Us</a>
	</p>
</Layout>

<style>
	.card { border: 1px solid var(--border); border-radius: 0.5rem; padding: 1rem; }
	.map-wrap { margin-top: 0.75rem; }
</style>



