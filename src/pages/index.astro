---
import Layout from '../layouts/Layout.astro';
import Testimonials from '../components/Testimonials.astro';
import ImageGallery from '../components/ImageGallery.astro';

const title = "Nail 90 Spa — Premium Nail Services in Green, Ohio";
const description = "Professional nail salon in Green, Ohio. Acrylic nails, gel manicures, pedicures, nail art, and emergency repairs. Book your appointment today!";
---

<Layout title={title} description={description}>
	<section class="hero">
		<h1>Modern Nails, Thoughtful Care.</h1>
		<p>Nail 90 Spa in Green, Ohio — manicures, pedicures, gel, acrylic, and nail art.</p>
		<div class="cta">
			<a class="btn" href="/services">Explore Nail Services</a>
			<a class="link" href="/contact">Book a Consultation</a>
		</div>
	</section>

	<section class="grid">
		<article>
			<h3>Color</h3>
			<p>Gel polish, dip powder, and chrome finishes with healthy nails first.</p>
		</article>
		<article>
			<h3>Pedicures</h3>
			<p>Spa pedicures with exfoliation, massage, and polish choices.</p>
		</article>
	</section>

	<section class="panel">
		<h2>Visit Us in Green, Ohio</h2>
		<p>Conveniently located with easy parking. Walk-ins welcome when available.</p>
		<a class="btn" href="/locations">See Location Details</a>
		<a class="link" href="/book">Book an Appointment</a>
	</section>

	<Testimonials />
	<ImageGallery />
</Layout>

<style>
	.hero {
		padding: 3rem 0 2rem;
	}
	.hero h1 { font-size: 2.25rem; margin: 0 0 0.5rem; }
	.hero p { color: #4b5563; margin: 0 0 1rem; }
	.cta { display: flex; gap: 1rem; align-items: center; }
	.link { color: #0ea5e9; }
	.grid {
		display: grid;
		grid-template-columns: repeat(3, minmax(0, 1fr));
		gap: 1rem;
		margin: 2rem 0;
	}
	.grid article { padding: 1rem; border: 1px solid var(--border); border-radius: 0.5rem; }
	.panel { background: var(--muted); padding: 1.25rem; border-radius: 0.5rem; }
	@media (max-width: 780px) {
		.grid { grid-template-columns: 1fr; }
	}
</style>
