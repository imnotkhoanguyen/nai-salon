---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';
import ImageGallery from '../components/ImageGallery.astro';

const title = "Nail Services — Manicures, Pedicures & More | Nail 90 Spa";
const description = "Complete nail services in Green, Ohio. Manicures from $30, pedicures from $35, acrylic nails from $65. Professional nail care with premium products.";
---

<Layout title={title} description={description}>
	<h1>Nail Services</h1>
	<p>Premium manicures and pedicures with a focus on nail health.</p>

	<section class="services">
		<div class="card">
			<h3>Manicures</h3>
			<ul>
				<li>Classic Manicure — from $30</li>
				<li>Gel Manicure — from $45</li>
				<li>Dip Powder — from $55</li>
			</ul>
		</div>
		<div class="card">
			<h3>Enhancements</h3>
			<ul>
				<li>Acrylic Full Set — from $65</li>
				<li>Fill — from $40</li>
				<li>Nail Art (per nail) — from $5</li>
			</ul>
		</div>
		<div class="card">
			<h3>Pedicures</h3>
			<ul>
				<li>Express Pedicure — from $35</li>
				<li>Spa Pedicure — from $55</li>
				<li>Deluxe Pedicure — from $75</li>
			</ul>
		</div>
	</section>

	<p style="color:#6b7280">Prices vary by stylist and hair length. Call for an exact quote.</p>

	<Gallery />
	<ImageGallery />
</Layout>

<style>
	.services { display: grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 1rem; margin: 1rem 0 2rem; }
	.card { border: 1px solid var(--border); border-radius: 0.5rem; padding: 1rem; }
	.card h3 { margin-top: 0; }
	@media (max-width: 780px) { .services { grid-template-columns: 1fr; } }
</style>



