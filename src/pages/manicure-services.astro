---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<h1>Manicure Services in Green, Ohio</h1>
	<p>Professional manicures for healthy, beautiful nails. From classic to luxury treatments.</p>

	<section class="services">
		<div class="card">
			<h2>Classic Manicure</h2>
			<p><strong>From $30</strong> • 45 minutes</p>
			<ul>
				<li>Nail shaping and filing</li>
				<li>Cuticle care</li>
				<li>Hand massage</li>
				<li>Polish application</li>
			</ul>
		</div>
		<div class="card">
			<h2>French Manicure</h2>
			<p><strong>From $40</strong> • 50 minutes</p>
			<ul>
				<li>Classic white tips</li>
				<li>Natural base</li>
				<li>Perfect for any occasion</li>
				<li>Timeless elegance</li>
			</ul>
		</div>
		<div class="card">
			<h2>Luxury Manicure</h2>
			<p><strong>From $55</strong> • 75 minutes</p>
			<ul>
				<li>Extended hand massage</li>
				<li>Paraffin treatment</li>
				<li>Premium products</li>
				<li>Nail art options</li>
			</ul>
		</div>
	</section>

	<section class="locations">
		<h2>Manicures Near You</h2>
		<ul>
			<li><a href="/manicure-canton">Manicure Canton OH</a></li>
			<li><a href="/manicure-north-canton">Manicure North Canton</a></li>
			<li><a href="/manicure-green">Manicure Green OH</a></li>
		</ul>
	</section>

	<p><a class="btn" href="/book">Book Manicure</a></p>
</Layout>

<style>
	.services { display: grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 1rem; margin: 2rem 0; }
	.card { border: 1px solid var(--border); border-radius: 0.5rem; padding: 1rem; }
	.locations { margin: 2rem 0; }
	.locations ul { list-style: none; padding: 0; display: grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 0.5rem; }
	@media (max-width: 780px) { .services, .locations ul { grid-template-columns: 1fr; } }
</style>
