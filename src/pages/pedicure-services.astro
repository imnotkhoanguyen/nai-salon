---
import Layout from '../layouts/Layout.astro';

const title = "Pedicures in Green, Ohio | Express, Spa & Deluxe | Nail 90 Spa";
const description = "Relaxing pedicures in Green, Ohio. Express from $35, spa from $55, deluxe from $75. Foot care with massage, exfoliation, and premium treatments.";
---

<Layout title={title} description={description}>
	<h1>Pedicure Services in Green, Ohio</h1>
	<p>Relaxing pedicures for healthy, beautiful feet. From express to deluxe spa treatments.</p>

	<section class="services">
		<div class="card">
			<h2>Express Pedicure</h2>
			<p><strong>From $35</strong> • 45 minutes</p>
			<ul>
				<li>Nail trimming and shaping</li>
				<li>Cuticle care</li>
				<li>Polish application</li>
				<li>Perfect for busy schedules</li>
			</ul>
		</div>
		<div class="card">
			<h2>Spa Pedicure</h2>
			<p><strong>From $55</strong> • 75 minutes</p>
			<ul>
				<li>Foot soak and exfoliation</li>
				<li>Callus removal</li>
				<li>Leg and foot massage</li>
				<li>Moisturizing treatment</li>
			</ul>
		</div>
		<div class="card">
			<h2>Deluxe Pedicure</h2>
			<p><strong>From $75</strong> • 90 minutes</p>
			<ul>
				<li>Extended massage</li>
				<li>Paraffin treatment</li>
				<li>Nail art options</li>
				<li>Premium products</li>
			</ul>
		</div>
	</section>

	<section class="locations">
		<h2>Pedicures Near You</h2>
		<ul>
			<li><a href="/pedicure-canton">Pedicure Canton OH</a></li>
			<li><a href="/pedicure-north-canton">Pedicure North Canton</a></li>
			<li><a href="/pedicure-green">Pedicure Green OH</a></li>
		</ul>
	</section>

	<p><a class="btn" href="/book">Book Pedicure</a></p>
</Layout>

<style>
	.services { display: grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 1rem; margin: 2rem 0; }
	.card { border: 1px solid var(--border); border-radius: 0.5rem; padding: 1rem; }
	.locations { margin: 2rem 0; }
	.locations ul { list-style: none; padding: 0; display: grid; grid-template-columns: repeat(3, minmax(0,1fr)); gap: 0.5rem; }
	@media (max-width: 780px) { .services, .locations ul { grid-template-columns: 1fr; } }
</style>
